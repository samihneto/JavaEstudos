package br.com.fiap;

public class TelevisorEncapsulado {
	private int volume;
	private int canal;
	
	//CTRL+3 -> ggas
	public int getVolume() {
		return volume;
	}
	public void setVolume(int volume) {
		this.volume = volume;
	}
	public int getCanal() {
		return canal;
	}
	public void setCanal(int canal) {
		this.canal = canal;
	}
	
	public void aumentarVolume() {
		if (volume < 20) {
			volume++;
		}
	}
	
	public void diminuirVolume() {
		if (volume > 0) {
			volume--;
		}
	}
}
